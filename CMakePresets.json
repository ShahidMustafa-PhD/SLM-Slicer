{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "msvc-ninja-release",
      "displayName": "MSVC x64 Release (Ninja + vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-msvc-release",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "VCPKG_FEATURE_FLAGS": "manifests",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install-msvc-release"
      },
      "environment": {
        "CC": "cl",
        "CXX": "cl"
      }
    },
    {
      "name": "msvc-ninja-debug",
      "displayName": "MSVC x64 Debug (Ninja + vcpkg)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build-msvc-debug",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_TOOLCHAIN_FILE": "C:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows",
        "VCPKG_FEATURE_FLAGS": "manifests",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install-msvc-debug"
      },
      "environment": {
        "CC": "cl",
        "CXX": "cl"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "msvc-release",
      "configurePreset": "msvc-ninja-release"
    },
    {
      "name": "msvc-release-install",
      "configurePreset": "msvc-ninja-release",
      "targets": [ "install" ]
    },
    {
      "name": "msvc-debug",
      "configurePreset": "msvc-ninja-debug"
    },
    {
      "name": "msvc-debug-install",
      "configurePreset": "msvc-ninja-debug",
      "targets": [ "install" ]
    }
  ]
}
